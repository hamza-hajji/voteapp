{{> header }}

  {{#if message}}
    <div class="alert alert-danger"> {{message}} </div>
  {{/if}}

  <div class="container">
    
    <form class="col-sm-6 mx-auto" action="/new" method="post">
      <div class="form-group">
        <label for="exampleInputEmail1">Poll name</label>
        <input type="text" name="name" class="form-control form-control-lg" id="name" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Options</label>
        <input type="text" name="options[0][name]" class="form-control" id="option1" placeholder="Option 1"><br>
        <input type="text" name="options[1][name]" class="form-control" id="option2" placeholder="Option 2">
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>

  </div>

{{> footer }}